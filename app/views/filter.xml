<Alloy>
	<Window id="fwin" title='Filter' layout="vertical">
		<LeftNavButton platform="ios"><Button id="cancel" onClick="cancelFilter">Cancel</Button></LeftNavButton>
		<RightNavButton platform="ios"><Button id="reset" onClick="resetFilter">Clear All</Button></RightNavButton>
		<ActionBar platform="android" id="actionbar" title="Filter" onHomeIconItemSelected="cancelFilter" displayHomeAsUp="true" />
		<Menu platform="android">
			<MenuItem title="Clear All" onClick="resetFilter" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" />
		</Menu>	
		<ScrollView id="scrollView" layout="vertical" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="true" height="100%" width="100%">
			<View id="paceRow" top="0" height="30" layout="horizontal">
				<Button top="0" id="pace" height="30" width="50" onClick="hidePaceView">Pace</Button>
				<Label top="0" left="15" height="30" width="280" id="paceLabel" onClick="hideDateView"></Label>
				<ImageView id="paceFold" width="20" image="Filter open.png" onClick="hidePaceView"/>
			</View>
			<View id="paceView" top="0" left="0" right="0" height="50%" layout="vertical" visible="false">
				<View id="firstRow" height="30" layout="horizontal">
					<Button left="5" width = "50" onClick="selfPaced">Self Paced</Button>
					<Button left="0" width = "50" onClick="easy">Easy</Button>
					<Button left="0" width = "50" onClick="leisurely">Leisurely</Button>
				</View>
				<View id="secondRow" top="20" width="100%" height="30" layout="horizontal">
						<Button left="5" onClick="steady">Steady</Button>
						<Button left="0" onClick="moderate">Moderate</Button>
						<Button left="0" onClick="brisk">Brisk</Button>
				</View>
				<View id="thirdRow" top="20" width="100%" height="30" layout="horizontal">
							<Button left="5" onClick="vigorous">Vigorous</Button>
							<Button left="0" onClick="strenuous">Strenuous</Button>
							<Button left="0" onClick="superStrenuous">Super Strenuous</Button>
				</View>
			</View>   
			<View id="dateRow" top="0" width="100%" layout="horizontal" height="30">
	        	<Button top="0" id="date" class="testButton" onClick="hideDateView">DateTime</Button>
	        	<Label top="0" left="15" onClick="hideDateView" id="dateLabel"></Label>
	        	<Button id="dateFold" left="290" backgroundImage="Filter open.png" onClick="hideDateView"></Button>
			</View>
	        <View id="dateView" top="0" layout="vertical" visible="false" width="100%" height="100%">
		        <Picker top="0" id="startDate" type="Titanium.UI.PICKER_TYPE_DATE"></Picker>
		        <View id="start" width="100%" height="30" layout="horizontal">
		        	<Label top="0" id="startTimeLabel"></Label>
		        	<Slider id="startTimeSlider" top="0" />
	        	</View>
		        <Label top="0">To</Label>
		        <Picker top="0" id="endDate" type="Titanium.UI.PICKER_TYPE_DATE"></Picker>
		        <View id="end" width="100%" height="30" layout="horizontal">
		        	<Label top="0" id="endTimeLabel"></Label>
		        	<Slider id="endTimeSlider" top="0"/>
		        </View>
	        </View>
	        <View id="distanceRow" top="0" width="100%" height="30" layout="horizontal">
				<Button top="0" id="distance" onClick="hideDistanceView">Distance</Button>
				<Label top="0" left="15" id="distanceLabel" onClick="hideDistanceView"></Label>
				<Button id="distanceFold" left="290" backgroundImage="Filter open.png" onClick="hideDistanceView"></Button>
			</View>
			<View id="distanceView" top="0" left="0" right="0" width="100%" height="50%" layout="vertical" visible="false">
				<View id="firstRow1" width="100%" height="60" layout="horizontal">
					<Button left="15" onClick="ten">10-20</Button>
					<Button left="0" onClick="twenty">20-30</Button>
					<Button left="0" onClick="thirty">30-40</Button>
				</View>
				<View id="secondRow1" top="20" width="100%" height="60" layout="horizontal">
						<Button left="15" onClick="fourty">40-50</Button>
						<Button left="0" onClick="fifty">50-60</Button>
						<Button left="0" onClick="sixty">60-70</Button>
				</View>
				<View id="thirdRow1" top="20" width="100%" height="60" layout="horizontal">
							<Button left="15" onClick="seventy">70-80</Button>
							<Button left="0" onClick="eighty">80-90</Button>
							<Button left="0" onClick="ninety">90+</Button>
				</View>
			</View>   
				<Button top="0" id="reset" onClick="applyFilter">Apply</Button>
        </ScrollView>
	</Window>
</Alloy>