
<Alloy>
    <Window id="mainWindow" title="map">
    	<Require type="widget" src="com.alcoapps.drawermenu" id="drawermenu"/>
    	<Menu platform="android">
			<MenuItem title="Search" icon="images/searchLight.png" onClick="toSearch" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" />
		</Menu>		
		<!--
		<ActionBar platform="android" displayHomeAsUp="false" onHomeIconItemSelected="toggleMenu" />
		-->
		<View id="mainView">
	        <View ns="Alloy.Globals.Map" id="mapview" module="ti.map" onClick="report">
	        </View>
	        <View id="rideInfoCallout" class="rideInfoCallout" visible="false" onClick="showDetail">
	        	<Label id="rideTitle" class="rideTitle"></Label>
	        	<Label id="rideDate" class="rideDate"></Label>
	        	<Label id="ridePace" class="ridePace"></Label>
	        	<Label id="rideDistance" class="rideDistance"></Label>
	        </View>
        </View>
    </Window>
</Alloy>





