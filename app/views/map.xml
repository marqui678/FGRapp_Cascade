
<Alloy>
    <Window id="mainWindow" title="map">
    	<Require type="widget" src="com.alcoapps.drawermenu" id="drawermenu"/>
    	<Menu platform="android">
			<MenuItem title="Search" icon="images/ic_search_light.png" onClick="toSearch" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" />
			<MenuItem title="List" onClick="toList" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" />
		</Menu>
		<RightNavButtons platform="ios">
			<Button title="Search" onClick="toSearch" />
			<Button title="List" onClick="toList" />
		</RightNavButtons>		
		<View id="mainView">
	        <View ns="Alloy.Globals.Map" id="mapview" module="ti.map" onClick="report">
	        </View>
        </View>
        
        <Toolbar platform="ios" bottom="0" borderTop="true" borderBottom="false">
            <Items>              
                <FlexSpace/>
                <Button id="filter" onClick="toFilter">Filter</Button>/>
            </Items>
        </Toolbar>
        <View id="toolBarAndroid" platform="android" bottom="0" borderTop="true" borderBottom="false">
        	<Button id="filter" onClick="toFilter">Filter</Button>
        </View>
        
        <View id="rideInfoCallout" class="rideInfoCallout" visible="false" onClick="showDetail">
        	<Label id="rideTitle" class="rideTitle"></Label>
        	<Label id="rideDate" class="rideDate"></Label>
        	<Label id="ridePace" class="ridePace"></Label>
        	<Label id="rideDistance" class="rideDistance"></Label>
        </View>
        
    </Window>
</Alloy>
